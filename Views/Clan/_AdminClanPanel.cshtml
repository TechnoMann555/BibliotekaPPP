@model BibliotekaPPP.Models.BusinessObjects.ClanBO

<div class="card text-dark bg-light">
	<div class="card-body d-flex justify-content-between align-items-center">
		<p class="lead mb-0">
			<span class="fw-bold">@Model.Jcb</span> - @Model.ImePrezime
		</p>
		<div class="btn-group">
			<a asp-controller="Clan" asp-action="PrikazLicnihPodataka" asp-route-id="@Model.ClanId" target="_blank" class="btn btn-primary">Lični i članski podaci</a>
			<a asp-controller="Clanarina" asp-action="ClanarineClana" asp-route-id="@Model.ClanId" target="_blank" class="btn btn-primary">Članarine</a>
			<a target="_blank" class="btn btn-primary" href="#">Pozajmice</a>
		</div>
	</div>
</div>
